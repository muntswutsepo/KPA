@model KPAWeb.Models.KPA

@{
    ViewData["Title"] = "Create";
}

<h1>Register</h1>

<h4>Dashboard</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="KPA_Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="KPA_Description" class="control-label"></label>
                <input asp-for="KPA_Description" class="form-control" />
                <span asp-validation-for="KPA_Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weighting" class="control-label"></label>
                <input asp-for="Weighting" min="0" max="100" class="form-control" />
                <span asp-validation-for="Weighting" class="text-danger"></span> 
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-sm btn-outline-secondary" asp-action="KPA_Index"><i class="bi bi-back"></i>Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
